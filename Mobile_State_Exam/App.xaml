<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile_State_Exam.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="GreenColor">#3BA639</Color>
            <Color x:Key="BlueColor">#2966AD</Color>
            <Color x:Key="WhiteColor">#FFFFFF</Color>
            <Color x:Key="RedColor">#D02424</Color>
            <Color x:Key="YellowColor">#F7CC33</Color>
            <Style x:Key="Grid_color" TargetType="Grid">
                <Setter Property="Padding" Value="25"></Setter>
                <Setter Property="BackgroundColor" Value="White"></Setter>
            </Style>
            <Style x:Key="Header" TargetType ="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource Key=BlueColor}"></Setter>
                <Setter Property="CornerRadius" Value="20"></Setter>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"></Setter>
            </Style>
            <Style x:Key="Blue_item" TargetType ="Frame">
                <Setter Property="CornerRadius" Value="20"></Setter>
                <Setter Property="BackgroundColor" Value="{StaticResource Key=BlueColor}"></Setter>
            </Style>
            <Style x:Key="Green_item" TargetType ="Frame">
                <Setter Property="CornerRadius" Value="20"></Setter>
                <Setter Property="BackgroundColor" Value="{StaticResource Key=GreenColor}"></Setter>
                <Setter Property="Padding" Value="10"></Setter>
            </Style>
            <Style x:Key="Label_item" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="CenterAndExpand"></Setter>
                <Setter Property="FontSize" Value="26"></Setter>
                <Setter Property="TextColor" Value="{StaticResource WhiteColor}"></Setter>
            </Style>
            <Style x:Key="FontIcon" TargetType="Label">
                <Setter Property="FontFamily" Value="FontAwesome"></Setter>
                <Setter Property="TextColor" Value="{StaticResource WhiteColor}"></Setter>
                <Setter Property="FontSize" Value="35"></Setter>
                <Setter Property="VerticalOptions" Value="CenterAndExpand"></Setter>
                <Setter Property="HorizontalOptions" Value="Start"></Setter>
                <Setter Property="Margin" Value="20,0,0,0"></Setter>
            </Style>
            <Style x:Key="Button_Accept" TargetType="Button">
                <Setter Property="FontSize" Value="16"></Setter>
                <Setter Property="CornerRadius" Value="20"></Setter>
                <Setter Property="BackgroundColor" Value="{StaticResource GreenColor}"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>